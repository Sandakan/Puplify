<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateProfileInformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:context=".activities.UpdateProfileInformationActivity">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/update_profile_information"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/update_first_name_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/first_name_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <EditText
            android:id="@+id/update_first_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/first_name_input_label"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/update_first_name_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_first_name_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_first_name_input_label" />

        <TextView
            android:id="@+id/update_first_name_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_first_name_input"
            app:layout_constraintStart_toStartOf="@+id/update_first_name_input"
            app:layout_constraintTop_toBottomOf="@+id/update_first_name_input" />

        <TextView
            android:id="@+id/update_last_name_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/last_name_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_first_name_input_error_message" />

        <EditText
            android:id="@+id/update_last_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/last_name_input_label"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/update_last_name_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_last_name_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_last_name_input_label" />

        <TextView
            android:id="@+id/update_last_name_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_last_name_input"
            app:layout_constraintStart_toStartOf="@+id/update_last_name_input"
            app:layout_constraintTop_toBottomOf="@+id/update_last_name_input" />


        <TextView
            android:id="@+id/update_email_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/email_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_last_name_input_error_message" />

        <EditText
            android:id="@+id/update_email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email_input_label"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="@+id/update_email_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_email_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_email_input_label" />

        <TextView
            android:id="@+id/update_email_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_email_input"
            app:layout_constraintStart_toStartOf="@+id/update_email_input"
            app:layout_constraintTop_toBottomOf="@+id/update_email_input" />

        <TextView
            android:id="@+id/update_password_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/password_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_email_input_error_message" />

        <EditText
            android:id="@+id/update_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password_input_label"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/update_password_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_password_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_password_input_label" />

        <TextView
            android:id="@+id/update_password_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_password_input"
            app:layout_constraintStart_toStartOf="@+id/update_password_input"
            app:layout_constraintTop_toBottomOf="@+id/update_password_input" />

        <TextView
            android:id="@+id/update_confirm_password_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/confirm_password_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_password_input_error_message" />

        <EditText
            android:id="@+id/update_confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/confirm_password_input_label"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="@+id/update_confirm_password_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_confirm_password_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_confirm_password_input_label" />

        <TextView
            android:id="@+id/update_confirm_password_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_confirm_password_input"
            app:layout_constraintStart_toStartOf="@+id/update_confirm_password_input"
            app:layout_constraintTop_toBottomOf="@+id/update_confirm_password_input" />

        <TextView
            android:id="@+id/update_address_input_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/address_input_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_confirm_password_input_error_message" />

        <EditText
            android:id="@+id/update_address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/address_input_label"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@+id/update_address_input_label"
            app:layout_constraintStart_toStartOf="@+id/update_address_input_label"
            app:layout_constraintTop_toBottomOf="@+id/update_address_input_label" />

        <TextView
            android:id="@+id/update_address_input_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/error"
            app:layout_constraintEnd_toEndOf="@+id/update_address_input"
            app:layout_constraintStart_toStartOf="@+id/update_address_input"
            app:layout_constraintTop_toBottomOf="@+id/update_address_input" />

        <Button
            android:id="@+id/update_profile_information_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="@string/update_profile_information"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_address_input_error_message" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>